    "@vue/test-utils": "^2.4.6",
    "eslint-plugin-playwright": "^1.6.2",
    "happy-dom": "^14.12.3",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.2.9",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
