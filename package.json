    "@vueuse/core": "^11.0.3",
    "canvas-confetti": "^1.9.3",
    "engine.io": "^6.6.0",
    "nuxt": "^3.13.0",
    "pinia": "^2.2.2",
    "sit-onyx": "1.0.0-beta.38",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "vue": "^3.4.38",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@fontsource-variable/source-code-pro": "^5.0.20",
